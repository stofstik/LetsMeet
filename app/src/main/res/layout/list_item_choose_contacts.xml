<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/list_item_horizontal_padding"
    android:paddingStart="@dimen/list_item_horizontal_padding">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/list_item_vertical_margin"
        android:layout_toLeftOf="@+id/cb_send_invite"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Morrison Wijnen"
        android:textSize="@dimen/text_size_name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/list_item_vertical_margin"
        android:layout_toLeftOf="@+id/cb_send_invite"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="morrisonwijnen@gmail.com"
        android:textSize="@dimen/text_size_email" />

    <CheckBox
        android:id="@+id/cb_send_invite"
        android:layout_width="@dimen/check_box_size"
        android:layout_height="@dimen/check_box_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical" />

</RelativeLayout>